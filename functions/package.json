{
    "name": "functions",
    "version": "1.0.0",
    "description": "Cloud Functions for Doorstep Delivery API",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "npx ts-node src/local.ts",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "firebase-admin": "^13.6.0",
        "firebase-functions": "^7.0.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "firebase-functions-test": "^3.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "private": true
}
